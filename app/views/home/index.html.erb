<div class="row">
  <div class="col-lg-12 text-center">
    <h1 class="main-logo-name">BARBAROSSA</h1>
    Gildia "Barbarossa"
    <em>(dawniej "Oferujemy Kurtule")</em><br>
    <hr>

    <div class="row">
      <div class="col-lg-12">
        <% if user_signed_in? %>
        <%= render 'shoutbox' %>
        <% end %>
      </div>
    </div>

    <%= render 'info' %>
  </div>
</div>
<!--<div class="img-cover"></div>-->
<hr>

<div class="container" id="poll">
  <div class="row">
    <div class="col-lg-12 text-center">

      <%= render 'form' %>

      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <div class="row">
              <div class="col-lg-3">
                <div class="ibox">
                  <div class="ibox-content">
                    <h3>Meele DD</h3>

                    <h2 id="ddm-wow-n"><%= @all_characters.select{|e| e.game_role == 'Melee DD'}.count %>
                      <i class="fa fa-gavel"></i>
                    </h2>
                    <ul class="list4" id="ddm-wow">
                      <% @all_characters.select{|e| e.game_role == 'Melee DD'}.each do |c| %>
                      <%= render 'game_character', :char => c %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="ibox">
                  <div class="ibox-content">
                    <h3>Ranged DD</h3>

                    <h2 id="dd-wow-n"><%= @all_characters.select{|e| e.game_role == 'Ranged DD'}.count %>
                      <i class="fa fa-crosshairs"></i>
                    </h2>
                    <ul class="list4" id="dd-wow">
                      <% @all_characters.select{|e| e.game_role == 'Ranged DD'}.each do |c| %>
                      <%= render 'game_character', :char => c %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="ibox">
                  <div class="ibox-content">
                    <h3>Tanks</h3>
                    <h2 id="tanks-wow-n"><%= @all_characters.select{|e| e.game_role == 'Tank'}.count %>
                      <i class="fa fa-shield"></i>
                    </h2>
                    <ul class="list4" id="tanks-wow">
                      <% @all_characters.select{|e| e.game_role == 'Tank'}.each do |c| %>
                      <%= render 'game_character', :char => c %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
              <div class="col-lg-3">
                <div class="ibox">
                  <div class="ibox-content">
                    <h3>Healers</h3>

                    <h2 id="healers-wow-n"><%= @all_characters.select{|e| e.game_role == 'Healer' }.count %>
                      <i class="fa fa-plus"></i>
                    </h2>
                    <ul class="list4" id="healers-wow">
                      <% @all_characters.select{|e| e.game_role == 'Healer' }.each do |c| %>
                      <%= render 'game_character', :char => c %>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>

            </div>

          </div>

        </div>

      </div>
    </div>
