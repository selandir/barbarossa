</div>
<!--<div class="img-cover"></div>-->
<hr>

<div class="container" id="poll">
  <div class="row">
    <div class="col-lg-12 text-center">
      <p class="lead" style="margin-top:50px;">Kim grasz w Legionie?</p>

      <ul class="list-unstyled">
        <li>By Selandir</li>
        <li>
          <i>"Justice demand retribution!"</i>
        </li>
      </ul>

      <%= render 'form' %>

      <div class="container">
        <div class="row">
          <div class="col-lg-12 text-center">
            <div id='loading'>
              <h3>LOADING DATA ...</h3><br>
              <i class="fa fa-4x fa-spinner fa-spin"></i>
            </div>

            <ul class="nav nav-tabs" role="tablist">
              <li role="presentation" class="active">
                <a href="#home" aria-controls="home" role="tab" data-toggle="tab">Lista osób wg. ról</a>
              </li>
              <li role="presentation">
                <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Lista osób wg. klas</a>
              </li>
            </ul>

            <div class="tab-content">
              <div role="tabpanel" class="tab-pane fade active in" id="home">
                <div class="col-lg-12 text-center">
                  <div class="row">
                    <div class="col-lg-3">
                      <div class="ibox">
                        <div class="ibox-content">
                          <h3>Meele damage dealers</h3>
                          <i class="fa fa-gavel fa-2x"></i><br>
                          <h2 id="ddm-wow-n"></h2>
                          <ul class="sortable-list connectList agile-list ui-sortable" id="ddm-wow">
                            <% @all_characters.where(game_role: 'Melee DD').each do |c| %>
                            <li class="<%= c.game_class.downcase %>-element">
                              <%= c.name %>
                            </li>
                            <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3">
                      <div class="ibox">
                        <div class="ibox-content">
                          <h3>Ranged damage dealers</h3>
                          <i class="fa fa-crosshairs fa-2x"></i><br>
                          <h2 id="dd-wow-n"></h2>
                          <ul class="sortable-list connectList agile-list ui-sortable" id="dd-wow">
                            <% @all_characters.where(game_role: 'Ranged DD').each do |c| %>
                            <li class="<%= c.game_class.downcase %>-element">
                              <%= c.name %>
                            </li>
                            <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3">
                      <div class="ibox">
                        <div class="ibox-content">
                          <h3>Tanks</h3>
                          <i class="fa fa-shield fa-2x"></i><br>
                          <h2 id="tanks-wow-n"></h2>
                          <ul class="sortable-list connectList agile-list ui-sortable" id="tanks-wow">
                            <% @all_characters.where(game_role: 'Tank').each do |c| %>
                            <li class="<%= c.game_class.downcase %>-element">
                              <%= c.name %>
                            </li>
                            <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-3">
                      <div class="ibox">
                        <div class="ibox-content">
                          <h3>Healers</h3>
                          <i class="fa fa-plus fa-2x"></i><br>
                          <h2 id="healers-wow-n"></h2>
                          <ul class="sortable-list connectList agile-list ui-sortable" id="healers-wow">
                            <% @all_characters.where(game_role: 'Healer').each do |c| %>
                            <li class="<%= c.game_class.downcase %>-element">
                              <%= c.name %>
                            </li>
                            <% end %>
                          </ul>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div role="tabpanel" class="tab-pane fade" id="profile">

                <table class="table stripped">
                  <tr>
                    <td></td>
                  </tr>
                  <tr>
                    <td id="deathknight"><img class="class-icon" src="http://vignette2.wikia.nocookie.net/wowwiki/images/f/fa/IconSmall_Deathknight.gif/revision/latest?cb=20080717214217"></td>
                  </tr>
                  <tr>
                    <td id="demonhunter"><img class="class-icon" src="http://vignette1.wikia.nocookie.net/wowwiki/images/3/39/IconSmall_Demonhunter.gif/revision/latest?cb=20151108175244"></td>
                  </tr>
                  <tr>
                    <td id="druid"><img class="class-icon" src="http://vignette2.wikia.nocookie.net/wowwiki/images/3/37/IconSmall_Druid.gif/revision/latest?cb=20050912092444"></td>
                  </tr>
                  <tr>
                    <td id="hunter"><img class="class-icon" src="http://vignette1.wikia.nocookie.net/wowwiki/images/f/fc/IconSmall_Hunter.gif/revision/latest?cb=20050912092456"></td>
